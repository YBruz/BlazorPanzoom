@page "/exclude"
@using BlazorPanzoom.Options
@using BlazorPanzoom.Components

<Demo Title="Exclude elements within the Panzoom element from event handling" DemoType="GetType()">
    <div class="panzoom-parent">
        <Panzoom PanzoomOptions=@(new PanzoomOptions {ExcludeClass = "custom-excluded-class"})>
            <div style="border: 2px dotted; width: 400px; margin: 0 auto" @ref="context.ElementReference" class="panzoom">
                <img style="width: 100%; height: 100%" src="awesome_tiger.svg" alt="image"/>
                <a @ref="context.ExcludedElementReference" style="position: absolute; top: 20px; left: 0; right: 0; padding: 10px 0; text-align: center; font-size: 20px; color: #baffc1; background-color: rgba(0, 0, 0, 0.8); border-width: 1px; border-color: #dd33aa;"
                   id="link"
                   target="_blank"
                   rel="noopener noreferrer"
                   href="exclude">
                    This link will not allow dragging.
                </a>
                <!-- Could also use @ref="context.ExcludedElementReference", it will exclude this element as well -->
                <a style="position: absolute; top: 80px; left: 0; right: 0; padding: 10px 0; text-align: center; font-size: 20px; color: #baffc1; background-color: rgba(0, 0, 0, 0.8); border-width: 1px; border-color: #dd33aa;"
                   class="custom-excluded-class"
                   target="_blank"
                   rel="noopener noreferrer"
                   href="exclude">
                    This link will also not allow dragging.
                </a>
                <a style="position: absolute; top: 140px; left: 0; right: 0; padding: 10px 0; text-align: center; font-size: 20px; color: #baffc1; background-color: rgba(0, 0, 0, 0.8); border-width: 1px; border-color: #dd33aa;"
                   target="_blank"
                   rel="noopener noreferrer"
                   href="exclude">
                    This one will allow dragging.
                </a>
            </div>
        </Panzoom>
    </div>
</Demo>